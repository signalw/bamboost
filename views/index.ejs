<!DOCTYPE html>
<html>
  <% include partials/head.ejs %>
  <body>
    <div class="container">
      <div class="row">
        <% include partials/sidebar.ejs %>
        <div class="col-xs-12 col-sm-6 col-md-6">
          <form class="blog-form" hidden>
            <input type="text" id="title" autocomplete="off" required />
            <div id="article"></div>
            <button type="submit">Post blog</button>
          </form>
          <hr>
          <div class="post-wrapper">
            <% for (var i=0; i < blogs.length; i++) { %>
            <div class="post-preview">
              <p class="post-title">
                <a href="/post/<%= +blogs[i].date %>"><%= blogs[i].title %></a>
              </p>
              <p class="post-meta"><%= blogs[i].date %></p>
              <%= blogs[i].body_preview %></br>
              <hr>
            </div>
            <% } %>
          </div>
          <input id="pageNum" value="<%= page %>" hidden />
          <input id="lastPage" value="<%= lastPage %>" hidden />
          <div id="paginator"></div>
        </div>
      </div>
    </div>
  </body>
</html>
